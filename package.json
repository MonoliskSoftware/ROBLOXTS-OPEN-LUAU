{
	"name": "robloxts-open-luau",
	"displayName": "Roblox-TS Open Luau",
	"description": "Right-click on TypeScript/TSX files in a Roblox-TS project to open the corresponding compiled Luau file",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"repository": {
		"url": "https://github.com/MonoliskSoftware/ROBLOXTS-OPEN-LUAU",
		"type": "git"
	},
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "robloxts-open-luau.openCompiledLuau",
				"title": "Open Compiled Luau File"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname == .ts || resourceExtname == .tsx",
					"command": "robloxts-open-luau.openCompiledLuau",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"when": "resourceExtname == .ts || resourceExtname == .tsx",
					"command": "robloxts-open-luau.openCompiledLuau",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"jsonc-parser": "^3.2.0"
	}
}